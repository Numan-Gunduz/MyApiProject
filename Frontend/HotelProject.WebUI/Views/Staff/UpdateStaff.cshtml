@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Personel Güncelleme Sayfası</h1>

<form method="post">
	<input type="hidden"asp-for="StaffID"  />
	<label>Personel Adı</label>
	<input type="text" asp-for="Name" class="form-control" />
	<br />

	<label>Personel Ünvanı</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />

	<label>Sosyal Medya1</label>
	<input type="text" asp-for="SocialMedia1" class="form-control" />
	<br />
	<label>Sosyal Medya2</label>
	<input type="text" asp-for="SocialMedia2" class="form-control" />
	<br />
	<label>Sosyal Medya3</label>
	<input type="text" asp-for="SocialMedia3" class="form-control" />
	<br />
	<button class="btn btn-outline-success">Personeli Güncelle</button>
</form>


